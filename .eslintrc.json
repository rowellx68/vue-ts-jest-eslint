{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": [],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-undef": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
